@model Project2.Domains.Images

@{
    ViewData["Title"] = "delete";
}

<div>
    <h3>Are you sure you want to delete this?</h3>
    <div>
        <form asp-action="delete" class="d-flex flex-wrap" method="post">
            <dl class="row">
                <dt class="col-sm-2 hide">
                   <h2>Image</h2>
                </dt>
                <dd class="col-sm-10 hide">
                    <input type="text" asp-for="image_id" value="@Model.image_id" class="form-control"/>
                </dd>
                <dt class="col-sm-2">
                    <h2>Image Name: </h2>
                </dt>
                <dd class="col-sm-10">
                    <input type="text" asp-for="image_name" value="@Model.image_name" class="form-control" />
                </dd>
                <dt class="col-sm-2">
                    <h2>Location: </h2>
                </dt>
                <dd class="col-sm-10">
                    <input type="text" asp-for="image_Geolocation" value="@Model.image_Geolocation" class="form-control" />
                </dd>
                <dt class="col-sm-2">
                    <h2>Tag: </h2>
                </dt>
                <dd class="col-sm-10">
                    <input type="text" asp-for="image_Tag" value="@Model.image_Tag" class="form-control" />
                </dd>
                <dt class="col-sm-2">
                    <h2>
                        Captured Date:
                    </h2>
                </dt>
                <dd class="col-sm-10">
                    <input type="text" asp-for="image_CapturedDate" value="@Model.image_CapturedDate" class="form-control" />
                </dd>
                <dt class="col-sm-2">
                    <h2>Captured By:</h2>
                </dt>
                <dd class="col-sm-10">
                    <input type="text" asp-for="image_CapturedBy" value="@Model.image_CapturedBy" class="form-control" />
                </dd>
                <dt class="col-sm-2 hide">
                    <h2>Image</h2>
                </dt>
                <dd class="col-sm-10" hidden>
                    <input type="text" asp-for="image" value="@Model.image" class="form-control" />
                </dd>
                <dt class="col-sm-2">
                    <h2>Album</h2>
                </dt>
                <dd class="col-sm-10">
                    <input type="text" asp-for="album" value="@Model.album" class="form-control" />
                </dd>
            </dl>


            <input type="submit" value="Delete" class="btn btn-success" /> |
            <a asp-action="Index" class="btn btn-primary mx-auto">Back</a>
        </form>
    </div>
</div>
