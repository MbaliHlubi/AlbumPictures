@model List<Project2.Domains.Images>
@{
    ViewData["Title"] = "Sharedwithme";
}
<h1 class="text-black-50 text-center text-capitalize">Images Shared with me</h1>
<div class="container-fluid d-flex flex-row-reverse bg-success">
   
    @if (Model.Count() > 0)
    {
        @foreach (var img in Model)
        {
            <div class="card m-3">
                <img src="data:image/jpeg;base64,@System.Convert.ToBase64String(@img.image)" width="400" height="500" class="card-img-top" alt="thumbnail" />
                <div class="card-body">
                    <h2 class="card-title">@img.image_name</h2>
                    <h5 class="card-text">@img.image_Tag</h5>
                    <h5 class="card-text"> @img.image_Geolocation</h5>
                    <h5 class="card-text"> @img.image_CapturedBy</h5>
                    <h5 class="card-text">@img.image_CapturedDate</h5>
                    <h5 hidden class="card-text">@img.image_id</h5>
                </div>
                
            </div>
        }
    }
</div>
