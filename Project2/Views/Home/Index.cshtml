@model IEnumerable<Project2.Domains.Images>;
@{
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid">
    @if (Model.Count() > 0) {
        @foreach (var img in Model) { 
        <div class="card">
            <img src="" class="" alt="thumbnail" />
            <div class="card-body">
                <h2 class="card-title">@img.image_name</h2>
                <h5 class="card-text">Tag: @img.image_Tag</h5>
                <h5 class="card-text">Location: @img.image_Geolocation</h5>
                <h5 class="card-text">Captured By: @img.image_CapturedBy</h5>
                <h5 class="card-text">Captured Date: @img.image_CapturedDate</h5>
                <h5 hidden class="card-text">id: @img.image_id</h5>
                <form method="post" asp-action="share">
                    <input class="text" value="@img.image_id" hidden asp-for="@img.image_id"/>
                    <input class="btn btn-outline-info" value="Share" type="submit"/>
                </form>
            </div>
        </div>
        }
    }
</div>
