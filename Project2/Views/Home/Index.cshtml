@model IEnumerable<Project2.Domains.Images>;
@{
    ViewData["Title"] = "Home Page";
}

<head>
    <meta name="viewport" content="width=device-width" />
    <title>UserLogin</title>
    <script type="text/javascript">
        function preventBack() { window.history.forward(); }
        setTimeout("preventBack()", 0);
        window.onunload = function () { null };
    </script>
</head>
<body>
    <div class="container-fluid d-flex flex-row-reverse bg-primary">
        @if (Model.Count() > 0)
        {
            @foreach (var img in Model)
            {
                <div class="card m-3">
                    <img src="data:image/jpeg;base64,@System.Convert.ToBase64String(@img.image)" width="400" height="500" class="card-img-top" alt="thumbnail" />
                    <div class="card-body">
                        <h2 class="card-title">@img.image_name</h2>
                        <h5 class="card-text">@img.image_Tag</h5>
                        <h5 class="card-text"> @img.image_Geolocation</h5>
                        <h5 class="card-text"> @img.image_CapturedBy</h5>
                        <h5 class="card-text">@img.image_CapturedDate</h5>
                        <h5 hidden class="card-text">@img.image_id</h5>
                    </div>
                    <div class="card-footer">
                        <div class="d-flex justify-content-around flex-wrap-reverse">
                            @Html.ActionLink("Delete", "Delete", new { id = img.image_id });
                            @Html.ActionLink("Edit", "Edit", new { id = img.image_id });
                            @Html.ActionLink("Share", "Share", new { id = img.image_id });
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</body>